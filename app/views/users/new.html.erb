

<h4 class="ui center aligned medium icon header">
  <i class="circular orange  coffee icon"></i>
  Регистрация
  нового пользователя
</h4>


<div class="ui four column centered grid">
  <div class="column">
    <div class="ui placeholder segment">
      <%= form_for :user, html: { class: "ui form", role: "form" } do |f| %>
        <div class="field">
          <%= f.label :username, "Имя пользователя" %>
          <div class="ui left icon input">

            <%= f.text_field :username, placeholder: "Имя пользователь" %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, "Пароль" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Пароль" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <%= f.submit "Зарегистрироваться", class: "ui orange large submit  button" %>
      <% end %>
    </div>
  </div>
</div>
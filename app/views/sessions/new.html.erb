<div class="ui center aligned header">
  <h1> Добро пожаловать в ChatAPP</h1>
  <p> Написано в ознакомительных целях, для изучения Semantic UI</p>
</div>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange  coffee icon"></i>
  Войдите или зарегистрируйтесь
</h4>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: { class: "ui form", role: "form" }, url: login_path) do |f| %>
        <!--      <div class="ui form">   взамен верхней строчки-->
        <div class="field">
          <%= f.label :username, "Имя пользователя" %>
          <div class="ui left icon input">
            <!--            <input type="text_field" placeholder="Имя пользователь">  Взамен это - строчка ниже -->
            <%= f.text_field :username, placeholder: "Имя пользователь" %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, "Пароль" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Пароль" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <!--      </div>-->
        <%= f.button "Войти", class: "ui orange large submit  button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
        <%= link_to "Регистрация", users_path, class: " ui large button  orange signup icon " %>

    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>